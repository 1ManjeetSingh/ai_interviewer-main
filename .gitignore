# Root-level ignore
.DS_Store
.env
.env.local
.env.*.local
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*
lerna-debug.log*
*.log

# Ignore coverage and build artifacts
/coverage

# Node modules (common for Client and backend)
**/node_modules
/.pnp
.pnp.js

# Logs
logs
*.log
*.log.*
debug.log*

# Editor and OS-specific files
.vscode/*
!.vscode/extensions.json
.idea
*.suo
*.ntvs*
*.njsproj
*.sln
*.sw?

# Client-specific ignore
Client/node_modules
Client/.next
Client/out
Client/.nuxt
Client/.cache
Client/.parcel-cache

# Backend-specific ignore
backend/node_modules
backend/.pnp
backend/build
backend/dist
backend/tmp

# Ignore lockfiles (optional if you prefer a single lockfile in the root)
Client/package-lock.json
Client/yarn.lock
backend/package-lock.json
backend/yarn.lock

# Ignore sensitive env files
Client/.env
Client/.env.local
Client/.env.*.local
backend/.env
backend/.env.local
backend/.env.*.local
